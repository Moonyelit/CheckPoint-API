{% extends 'base.html.twig' %}

{% block title %}Résultats pour {{ query }}{% endblock %}

{% block body %}
    <h1>Résultats pour "{{ query }}"</h1>

    {% if games is empty %}
        <p>Aucun jeu trouvé.</p>
    {% else %}
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            {% for game in games %}
                <div style="border: 1px solid #ccc; border-radius: 8px; padding: 10px; width: 250px;">
                    <h3>{{ game.name }}</h3>
                    {% if game.cover %}
                        <img src="https:{{ game.cover.url }}" alt="{{ game.name }}" style="width: 100%;">
                    {% endif %}
                    {% if game.first_release_date %}
                        <p><strong>Date de sortie :</strong>
                            {{ game.first_release_date | date('d/m/Y', 'Europe/Paris') }}
                        </p>
                    {% endif %}
                    {% if game.genres is defined %}
                        <p><strong>Genres :</strong>
                            {{ game.genres | map(g => g.name) | join(', ') }}
                        </p>
                    {% endif %}
                    {% if game.platforms is defined %}
                        <p><strong>Plateformes :</strong>
                            {{ game.platforms | map(p => p.name) | join(', ') }}
                        </p>
                    {% endif %}
                    {% if game.summary %}
                        <p><strong>Résumé :</strong><br>{{ game.summary|length > 300 ? game.summary[:300] ~ '…' : game.summary }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
